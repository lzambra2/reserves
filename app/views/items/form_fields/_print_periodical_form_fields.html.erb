<!-- PRINT_PERIODICAL -->
<div class="row required">
	<div class="col-md-12">
			<%= f.input :title, label: "Article Title", required: true %>
	</div>
</div>
<div class="row required">
	<div class="col-md-12"><%= f.input :author, label: "Author: First and Last Names", required: true %></div>
</div>

<div class="row required">
	<div class="col-md-12">
			<%= f.input :journal_title, required: true %>
	</div>
</div>
<div class="row required">
	<div class="col-md-6"><%= f.input :publication_date, label: "Date of Publication", required: true %></div>
	<div class="col-md-6"><%= f.input :volume, required: true %></div>
	<div class="col-md-6"><%= f.input :page_number, required: true %></div>
	<div class="col-md-6"><%= f.input :issue, required: true %></div>
</div>
<div class="row required">
	<hr/>
	<div class="col-md-6"><%= f.input :loan_period, collection: LoanPeriod.all.collect { |p| p.duration }, required: true %></div>
	<div class="col-md-6"><%= f.input :provided_by_requestor, as: :radio_buttons,  label: "Will you be providing this item?", required: true %></div>
</div>
<div class="row">
	<div class="col-md-12"><% f.input :url, label: "URL", as: :string, hint: "valid url examples: http://www.myvideos.com/rest/of/your/path OR https://myebookurl.com" %></div>
</div>

<%= f.hidden_field :format, value: Item::FORMAT_ARTICLE  %>
