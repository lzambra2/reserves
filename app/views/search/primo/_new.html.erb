<% search_type = local_assigns[:search_type] %>

<div id="search_primo" class="well">
  <div class="row">
    <div class="col-md-12">
      <h4>Look up the <%= search_type.humanize if search_type %> record in the Primo catalogue.</h4>
    </div>
  </div>

  <%= simple_form_for :search, url: search_primo_path, method: :post, remote: true do |f| %>
  <div class="row">
      <div class="col-md-12">
        <div class="input-group input-group-md">
          <input type="hidden" name="type" value="<%= search_type %>"/>
          <input type="text" name="q" title="Search a title or author" class="form-control" placeholder="Search a title or author.">
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit" data-on-click-show=".searching">Go!</button>
          </span>
        </div>
      </div>
  </div>
  <% end %>

  <div class="searching hidden" style="margin: 20px 0 0 20px; ">
    Searching Primo....
  </div>
</div>
